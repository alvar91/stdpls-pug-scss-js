- var maxItemsCount = 9

    section.catalog
        .container.catalog__container
            h1.visually-hidden
                | Каталог
            .catalog__content
                .catalog__filters
                    .catalog-filter
                        h2.catalog-filter__subtitle
                            | Фильтровать по:
                        h2.catalog-filter__subtitle-mobile
                            | Фильтры
                        .catalog-filter__prop
                            h3.catalog-filter__caption
                                | Категория
                            .catalog-filter__bottom
                                .catalog-filter__items.catalog-filter__category.js-items-container
                                    +filterList(filterItems, "var(--catalog-category)", ["input-checkbox", "filter-checkbox", "checkbox-category"])

                                    - if(filterItemsLength > maxItemsCount)
                                        button(class="catalog-filter__btn js-catalog-more")
                                            | + еще #{filterItemsLength - maxItemsCount}

                        .catalog-filter__prop.catalog-price
                            h3.catalog-filter__caption.catalog-price__caption
                                | Цена
                            .catalog-filter__bottom.catalog-price__bottom
                                .catalog-price__wrapper
                                    label.catalog-price__label
                                        span.catalog-price__text
                                            | от
                                        input(id="input-0" type="number" min="2000" max="250000" placeholder="2000" name="number" class="catalog-price__input" aria-label="Выбрать диапазон цен на товары от 2000")

                                    label.catalog-price__label
                                        span.catalog-price__text
                                            | до
                                        input(id="input-1" type="number" min="2000" max="250000" placeholder="150 000" name="number" class="catalog-price__input" aria-label="Выбрать диапазон цен на товары до 250000")
                                .catalog-price__element#range-slider

                        .catalog-filter__prop
                            h3.catalog-filter__caption
                                | Скидка
                            .catalog-filter__bottom.js-items-container
                                .catalog-filter__items.catalog-filter__color.js-items-container
                                    +filterList(costItems, "var(--catalog-cost)", ["input-checkbox", "filter-checkbox", "checkbox-sale"])

                        .catalog-filter__prop
                            span.filters__title
                            h3.catalog-filter__caption
                                | Цвет
                            .filters__inner
                                .catalog-filter__items.catalog-filter__color.js-items-container
                                    +filterList(colorItems, "var(--catalog-color)", ["input-checkbox", "filter-checkbox", "checkbox-color"])

                                    - if(colorItemsLength > maxItemsCount)
                                        button(class="catalog-filter__btn js-catalog-more")
                                            | + еще #{colorItemsLength - maxItemsCount}

                    article.catalog-banner
                        .catalog-banner__img
                            picture
                                source(srcset="images/filter-img.webp" type="image/webp")
                                img(src="images/filter-img.jpg" alt="oxford-collection" loading="lazy" class="filters__card-img")
                        .catalog-banner__content
                            h3.catalog-banner__title
                                | Оксфорд 1950
                            p.catalog-banner__descr
                                | Новая коллекция изысканных&nbsp;кресел
