- var maxItemsCount = 10

    section.catalog
        .container.catalog__container
            h1.visually-hidden
                | Каталог
            .filters.filters--desktop
                .filters__subtitle
                    | Фильтровать по:
                .filters__category
                    span.filters__title
                        | Категория
                    .filters__inner
                        +filterList(filterItems, ["input-checkbox", "filter-checkbox", "checkbox-category"])

                        - if(filterItemsLength > maxItemsCount)
                            button(class="button-filters")
                                | + еще #{filterItemsLength - maxItemsCount}

                .filters__cost-slider
                    span.filters__title
                        | Цена
                    .filters__inner.filters__slider-inner
                        label
                            span
                                | от
                            input(type="number" min="2000" max="250000" placeholder="2000" name="number" class="input-number" aria-label="Выбрать диапазон цен на товары от 2000")

                        label
                            span
                                | до
                            input(type="number" min="2000" max="250000" placeholder="150 000" name="number" class="input-number checkbox-cost" aria-label="Выбрать диапазон цен на товары до 250000")
                    .filters__range

                .filters__sale
                    span.filters__title
                        | Скидка
                    .filters__inner
                        +filterList(costItems, ["input-checkbox", "filter-checkbox", "checkbox-sale"])

                .filters__color
                    span.filters__title
                        | Цвет
                    .filters__inner
                        +filterList(colorItems, ["input-checkbox", "filter-checkbox", "checkbox-color"])

                        - if(colorItemsLength > maxItemsCount)
                            button(class="button-filters")
                                | + еще #{colorItemsLength - maxItemsCount}

                article.filters__card
                    h2.visually-hidden
                        | Filter card
                    picture
                        source(srcset="images/filter-img.webp" type="image/webp")
                        img(src="images/filter-img.jpg" alt="oxford-collection" class="filters__card-img")
                    .filters__card-inner
                        p.filters__card-description
                            span
                                | Оксфорд 1950
                            | Новая коллекция изысканных кресел
                        a(href="#" class="top__card-link")
                            span.link__inner
                                | В каталог
                            span.link__arrow
                                span

            .catalog__main
                h3.section-title.catalog-title
                    | Каталог
                .catalog__options
                .filters__wrapper.filters__wrapper--tablet
                    .filters__subtitle
                        | Фильтры:
                    .filters__group-wrapper
                        .filters__category.filters__group
                            button(class="filters__open-btn" aria-label="Открыть список категорий товаров")
                                | Категория
                            .filters__inner.tablet-filters__inner
                                +filterList(filterItems, ["input-checkbox", "filter-checkbox", "checkbox-category"])

                                - if(filterItemsLength > maxItemsCount)
                                    button(class="button-filters")
                                        | + еще #{filterItemsLength - maxItemsCount}

                        .filters__cost-slider.filters__group
                            button.filters__open-btn
                                | Цена

                            div(class="filters__inner filters__slider-inner filters__inner--tablet" data-cost)
                                label.filters__slider-label
                                    span
                                        | от
                                    input(type="number" min="2000" max="150000" placeholder="2000" name="number" class="input-number" aria-label="Выбрать диапазон цен на товары от 2000")

                                label.filters__slider-label
                                    span
                                        | до
                                    input(type="number" min="2000" max="250000" placeholder="150 000" name="number" class="input-number checkbox-cost" aria-label="Выбрать диапазон цен на товары до 250000")

                        .filters__sale.filters__group
                            button(class="filters__open-btn" aria-label="Выбрать скидку на товары")
                                | Скидка

                            div(class="filters__inner filters__inner--tablet" data-sale)
                                +filterList(costItems, ["input-checkbox", "filter-checkbox", "checkbox-sale"])

                        .filters__color.filters__group
                            button.filters__open-btn
                                | Цвет

                            div(class="filters__inner tablet-filters__inner" data-color)
                                +filterList(colorItems, ["input-checkbox", "filter-checkbox", "checkbox-color"])

                                - if(colorItemsLength > maxItemsCount)
                                    button(class="button-filters")
                                        | + еще #{colorItemsLength - maxItemsCount}

                .swiper-container.catalog-products__field.js-catalog-products-swiper
                    ul.swiper-wrapper.catalog-products__list
                        +ratingList(ratingProducts)

                .catalog-pagination.swiper-pagination
